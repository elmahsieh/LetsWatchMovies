<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Switch
        android:id="@+id/apiToggleSwitch"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="Use API"
        android:textSize="18dp">
    </Switch>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation Settings: "
        android:textSize="18dp">

    </TextView>
    <RadioGroup
        android:id="@+id/radioGroupAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioAnimationOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animation Off"
            android:textSize="18sp"
            android:padding="20dp"/>

        <RadioButton
            android:id="@+id/radioAnimationOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animation On"
            android:textSize="18sp"
            android:padding="20dp"/>

    </RadioGroup>
</LinearLayout>


