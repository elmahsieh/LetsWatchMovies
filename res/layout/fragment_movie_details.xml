<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="60dp"
            android:id="@+id/detailPosterImageView"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <ToggleButton
            android:id="@+id/heartToggleButton"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:drawableTop="@drawable/selector_heart_button"
            android:textOff=""
            android:textOn=""
            android:backgroundTint="@android:color/transparent"
            android:padding="8dp"/>
        <Button
            android:id="@+id/btnRateApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate the App"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/detailTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:fontFamily="@font/zillaslab_medium"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/detailPosterImageView" />

        <TextView
            android:id="@+id/detailReleaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Date"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/detailTitleTextView"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/detailOverviewTextView"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Overview"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/detailReleaseDateTextView"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/detailLanguageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language: "
            android:layout_centerHorizontal="true"
            android:layout_below="@id/detailOverviewTextView"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/detailVoteAverageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vote Average: "
            android:layout_centerHorizontal="true"
            android:layout_below="@id/detailLanguageTextView"
            android:layout_marginTop="20dp" />


    </RelativeLayout>
</ScrollView>
